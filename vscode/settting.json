{
    // Theme 
    "workbench.colorTheme": "Tokyo Night",

    // Editor general settings
    "editor.lineNumbers": "relative",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.smartRelativeLine": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.autoindent": true,
    "vim.leader": ",",

    // Hijack the Ctrl key to allow for keybindings in insert mode
    "vim.useCtrlKeys": true,

    // insert mode setting
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
    ],

    // normal mode setting
    "vim.normalModeKeyBindingsNonRecursive": [
        // No hightlight
        {
            "before": ["<leader>", "<CR>"],
            "commands": [":nohl"]
        },
        // Goto definition
        {
            "before": ["g", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        // Goto references
        {
            "before": ["g", "r"],
            "commands": ["editor.action.gotoReferences"]
        },
        // Goto implementation
        {
            "before": ["g", "i"],
            "commands": ["editor.action.gotoImplementation"]
        },
        // Goto type definition
        {
            "before": ["g", "t"],
            "commands": ["editor.action.goToTypeDefinition"]
        },
        // Goto symbol
        {
            "before": ["g", "u"],
            "commands": ["workbench.action.showAllSymbols"]
        },
        // Navigate back
        {
            "before": ["g", "b"],
            "commands": ["workbench.action.navigateBack"]
        },
        // Navigate forward
        {
            "before": ["g", "f"],
            "commands": ["workbench.action.navigateForward"]
        },
        // Go to the beginning of the line
        {
            "before": ["g", "h"],
            "commands": ["cursorHome"]
        },
        // Go to the end of the line
        {
            "before": ["g", "l"],
            "commands": ["cursorEnd"]
        },
        // Focus on next editor in group
        {
            "before": ["L"],
            "commands": ["workbench.action.nextEditorInGroup"]
        },
        // Focus on previous editor in group
        {
            "before": ["H"],
            "commands": ["workbench.action.previousEditorInGroup"]
        },
        // check hover
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        },
        // Move current editor to next group
        {
            "before": ["<leader>", "l"],
            "commands": ["workbench.action.moveEditorToNextGroup"]
        },
        // Move current editor to previous group
        {
            "before": ["<leader>", "h"],
            "commands": ["workbench.action.moveEditorToPreviousGroup"]
        },
        // Focus on next group
        {
            "before": ["<C-l>"],
            "commands": ["workbench.action.focusNextGroup"]
        },
        // Focus on previous group
        {
            "before": ["<C-h>"],
            "commands": ["workbench.action.focusPreviousGroup"]
        },
        // Split editor vertically
        {
            "before": ["<leader>", "s", "v"],
            "commands": ["workbench.action.splitEditor"]
        },
        // Split editor horizontally
        {
            "before": ["<leader>", "s", "h"],
            "commands": ["workbench.action.splitEditorOrthogonal"]
        },
        // Find file
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        // Find globally in project
        {
            "before": ["<leader>", "f", "p"],
            "commands": ["workbench.action.findInFiles"]
        },
        // Toggle explorer
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.view.explorer"]
        },
    ],
    "vim.commandModeKeyBindingsNonRecursive": [
    ],

    "vim.handleKeys": {
        "<C-,>": false,
    },
    "editor.minimap.enabled": false
}